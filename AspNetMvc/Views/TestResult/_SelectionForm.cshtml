@using (Ajax.BeginForm(
            //"_SelectData",
            new AjaxOptions
            {
                UpdateTargetId = "data",
                LoadingElementId = "loading",
                LoadingElementDuration = 500,
                Url = Url.Action("_SelectData")
            }
            ))
{
    <p>
        Student Name<br />
        <input type="text" name="selName" />
    </p>
    <p>
        Course<br />
        @Html.DropDownList("selTestName", ViewBag.selTestName as SelectList)
    </p>
    <p>
        Completion Date <br/>
        From <br/><input type="date" name="startDate" /><br />
        To <br/><input type="date" name="endDate" />
    </p>
    <p>
        Mark<br />
        <input type="text" name="selMark" />
    </p>
    <p>
        <input type="submit" value="Show results" />
    </p>
    <div id="loading" class="load" style="display:none">
        <p>Loading. Please wait...</p>
    </div>
}


